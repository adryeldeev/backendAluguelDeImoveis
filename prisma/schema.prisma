generator client {
  provider = "prisma-client-js"
  output   = "prisma/node_modules/.prisma/client"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASES_URL")
}

model User {
  id        Int         @id @default(autoincrement())
  name      String
  email     String      @unique
  password  String
  Imboi     Imobi[]
  Messagens Messagens[]

  @@map("users")
}

model Imobi {
  id         Int       @id @default(autoincrement())
  tipo       String?
  thumb      String?
  endereco   String?
  cidade     String?
  uf         String?
  valor      String?
  descricao  String?   @db.VarChar(255)
  name       String
  email      String
  telefone   String
  slug       String
  userId     Int
  created_at DateTime? @default(now())
  author     User      @relation(fields: [userId], references: [id])

  @@index([userId], map: "imoveis_userId_fkey")
  @@map("imoveis")
}

model Messagens {
  id              Int    @id @default(autoincrement())
  client_name     String
  client_email    String
  client_mensagem String
  userId          Int
  author          User   @relation(fields: [userId], references: [id])

  @@index([userId], map: "messagens_userId_fkey")
  @@map("messagens")
}
